            <div class="flipper mb-3 mr-3"style="width:6rem; height:8rem;">
                <div class="front card border-warning">
                    <div class="card-header">
                        <h6 class="card-title text-warning">TAKE</h6>
                    </div>
                    <div class="card-body">
                        <h6 class="card-title text-warning">3</h6>
                    </div>
                </div>
                <div class="back card border-warning @t3">
                    <div class="card-header">
                        <h6 class="card-title">@ViewBag.CardArr.cards[3].StringVal</h6>
                    </div>
                    <div class="card-body">
                        <h6 class="card-title">@ViewBag.CardArr.cards[3].Suit</h6>
                    </div>
                </div>
            </div>
            <div class="flipper mb-3 mr-3"style="width:6rem; height:8rem;">
                <div class="front card border-warning">
                    <div class="card-header">
                        <h6 class="card-title text-warning">TAKE</h6>
                    </div>
                    <div class="card-body">
