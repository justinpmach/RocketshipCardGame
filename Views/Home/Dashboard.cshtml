            </div>
            <div class="flipper mb-3"style="width:6rem; height:8rem;">
                <div class="front card border-warning">
                    <div class="card-header">
                        <h6 class="card-title text-warning">TAKE</h6>
                    </div>
                    <div class="card-body">
                        <h6 class="card-title text-warning text-success">SHOT</h6>
                    </div>
                </div>
                <div class="back card border-warning @tS">
                    <div class="card-header">
                        <h6 class="card-title">@ViewBag.CardArr.cards[1].StringVal</h6>
                    </div>
                    <div class="card-body">
                        <h6 class="card-title">@ViewBag.CardArr.cards[1].Suit</h6>
                    </div>
                </div>
            </div>
            @* endofrow *@
        </div>
        

        <div class="row mb-5">
            
            <div class="flipper mb-3 mr-3"style="width:6rem; height:8rem;">
                <div class="front card border-success">
                    <div class="card-header">
                        <h6 class="card-title text-success">GIVE</h6>
                    </div>
                    <div class="card-body">
