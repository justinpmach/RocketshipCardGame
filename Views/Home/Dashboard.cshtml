        List<string> rdFourResult = Context.Session.GetObjectFromJson<List<string>>("RoundFourResult");
        }
            <div class="text-secondary mt-3">
                @if (rdOneResult != null)
                {
                    @foreach (string resOne in rdOneResult)
                    {
                        <ul style="list-style: none; padding:0px;">
                            <li>@resOne</li>
                        </ul>
                    }
                }
            </div>
            <div class="text-primary">
                @if (rdTwoResult != null)
                {
                    @foreach (string resTwo in rdTwoResult)
                    {
                        <ul style="list-style: none; padding:0px;">
                            <li>@resTwo</li>
                        </ul>
                    }
                }
            </div>
            <div class="text-warning">
                @if (rdThreeResult != null)
                {
                    @foreach (string resThree in rdThreeResult)
                    {
                        <ul style="list-style: none; padding:0px;">
                            <li>@resThree</li>
                        </ul>
                    }
                }
            </div>
            <div class="text-danger">
                @if (rdFourResult != null)
                {
                    @foreach (string resFour in rdFourResult)
                    {
                        <ul style="list-style: none; padding:0px;">
                            <li>@resFour</li>
                        </ul>
                    }
                }
            </div>
        </div>
    </div>
