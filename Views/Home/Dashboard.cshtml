                    <h6 class="back-card card-title">@ViewBag.CardArr.cards[4].Suit</h6>
                </div>
            </div>
            <div class="card border-warning mb-3 mr-3" style="width:6rem; height:8rem;">
                <div class="card-header">
                    <h6 class="front-card card-title text-warning">TAKE</h6>
                    <h6 class="back-card card-title">@ViewBag.CardArr.cards[3].StringVal</h6>
                </div>
                <div class="card-body">
                    <h6 class="front-card card-title text-warning">3</h6>
                    <h6 class="back-card card-title">@ViewBag.CardArr.cards[3].Suit</h6>
                </div>
            </div>
            <div class="card border-warning mb-3 mr-3" style="width:6rem; height:8rem;">
                <div class="card-header">
                    <h6 class="front-card card-title text-warning">TAKE</h6>
                    <h6 class="back-card card-title">@ViewBag.CardArr.cards[2].StringVal</h6>
                </div>
                <div class="card-body">
                    <h6 class="front-card card-title text-warning">4</h6>
                    <h6 class="back-card card-title">@ViewBag.CardArr.cards[2].Suit</h6>
                </div>
            </div>
            <div class="card border-warning mb-3" style="width:6rem; height:8rem;">
                <div class="card-header">
                    <h6 class="front-card card-title text-warning">TAKE</h6>
                    <h6 class="back-card card-title">@ViewBag.CardArr.cards[1].StringVal</h6>
                </div>
                <div class="card-body">
                    <h6 class="front-card card-title text-warning text-success">SHOT</h6>
                    <h6 class="back-card card-title">@ViewBag.CardArr.cards[1].Suit</h6>
                </div>
            </div>
            @* endofrow *@
        </div>
        

        <div class="row mb-5">
            
            <div class="card border-success mb-3 mr-3" style="width:6rem; height:8rem;">
                <div class="card-header">
                    <h6 class="front-card card-title text-success">GIVE</h6>
                    <h6 class="back-card card-title">@ViewBag.CardArr.cards[10].StringVal</h6>
                </div>
                <div class="card-body">
                    <h6 class="front-card card-title text-success">1</h6>
                    <h6 class="back-card card-title">@ViewBag.CardArr.cards[10].Suit</h6>
                </div>
            </div>
            <div class="card border-success mb-3 mr-3" style="width:6rem; height:8rem;">
                <div class="card-header">
                    <h6 class="front-card card-title text-success">GIVE</h6>
                    <h6 class="back-card card-title">@ViewBag.CardArr.cards[9].StringVal</h6>
                </div>
                <div class="card-body">
