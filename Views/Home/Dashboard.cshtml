@model Card
@using RocketShip.Models

<div class="row pt-4">
    <div class="col-3">
        <div class="col-10 ml-4 bg-white rounded border border-white overflow-auto" style="height:270px;">
            <div class="row rounded-top bg-primary py-1 d-flex justify-content-center">
                <h5 class="text-white">DRINK LOG</h5>
            </div>
        @{
        List<string> rdOneResult = Context.Session.GetObjectFromJson<List<string>>("RoundOneResult");
